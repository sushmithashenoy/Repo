package com.booking.dao;

import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.hibernate.cfg.Configuration;

import com.booking.model.User;

public class UserDAO 	
{
	
	 SessionFactory factory =new  Configuration().configure().buildSessionFactory();
     Session session=null;
     
   public static boolean login(User bean) {
      SessionFactory factory =new  Configuration().configure().buildSessionFactory();
      Session session=factory.openSession();
//      session.beginTransaction();
//      User user=session.get(User.class, bean.getUsername());
//      
//      return user.getPassword().equals(bean.getPassword());
      
      session.beginTransaction();
      User user=new User();
      user.setUserName("sushmitha");
      user.setPassword("shenoy");
      session.save(user);
      
//      return user.getPassword().equals(bean.getPassword());
      return true;
   }	
   
   public static boolean  addNewUser(User bean) {
	   User user=new User();
	      user.setUserName("sushmitha");
	      user.setPassword("shenoy");

}
   
   public static void main(String[] args) {
	   addNewUser(bean)
}
}

